CREATE KEYSPACE IF NOT EXISTS payments WITH REPLICATION = { 'class' : 'SimpleStrategy', 'replication_factor' : 1 };
CREATE TABLE IF NOT EXISTS payments.payment_tracker (id ascii, request_id ascii, status ascii, bank_code text, total_amount int, redirect_url text, message text, created_at timestamp, PRIMARY KEY (id, request_id));
CREATE INDEX IF NOT EXISTS idx_status ON payments.payment_tracker (status);